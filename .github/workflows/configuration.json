{
  "categories": [
    {
      "title": "## 🚀 New Features",
      "labels": ["feat"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    },
    {
        "title": "## 📦 Dependencies",
        "labels": ["deps", "build"]
    },
    {
      "title": "## 📖 Documentation",
      "labels": ["docs"]
    },
    {
      "title": "## 🧹 Chores",
      "labels": ["chore"]
    }
  ],
  "ignore_labels": [
    "ignore"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "pr_template": "- ${{TITLE}}\n   - PR: #${{NUMBER}} labels: ${{LABELS}}",
  "empty_template": "- no changes",
  "label_extractor": [
    {
      "pattern": "^feat",
      "method": "match",
      "on_property": "title"
    },
    {
      "pattern": "^test",
      "method": "match",
      "on_property": "title"
    },
    {
      "pattern": "^build",
      "method": "match",
      "on_property": "title"
    },
    {
      "pattern": "^fix",
      "method": "match",
      "on_property": "title"
    },
    {
      "pattern": "^docs",
      "method": "match",
      "on_property": "title"
    },
    {
      "pattern": "^doc",
      "method": "match",
      "on_property": "title"
    },
    {
      "pattern": "^chore",
      "method": "match",
      "on_property": "title"
    }
  ]
}
