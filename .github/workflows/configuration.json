{
  "categories": [
    {
      "title": "## 🚀 New Features",
      "labels": ["feature", "feat"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix"]
    },
    {
      "title": "## 🧪 Tests",
      "labels": ["test"]
    },
    {
        "title": "## 📦 Dependencies",
        "labels": ["dependencies", "build", "deps"]
    },
    {
      "title": "## 📖 Documentation",
      "labels": ["docs", "doc"]
    },
    {
      "title": "## 🧹 Chores",
      "labels": ["chore"]
    }
  ],
  "ignore_labels": [
    "ignore"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}\n\n<details>\n<summary>Uncategorized</summary>\n\n${{UNCATEGORIZED}}\n</details>",
  "pr_template": "- ${{TITLE}}\n   - PR: #${{NUMBER}} labels: ${{LABELS}}",
  "empty_template": "- no changes",
  "label_extractor": [
    {
      "pattern": "(?:^|(?:[.!?]\\s))(\\w+)",
      "target": "$1",
      "on_property": "title",
      "method": "match"
    }
  ],
  "duplicate_filter": {
    "pattern": "\\[ABC-....\\]",
    "on_property": "title",
    "method": "match"
  }
}
